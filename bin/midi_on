#!/bin/bash
#
# Turn on and setup everything for midi playback with lights.
#
# Third party dependencies:
#   lightorgan - https://code.google.com/p/pi-lightorgan/
#   timidity - http://timidity.sourceforge.net/
#
# Author: Todd Giles

# Start lightorgan
sudo killall lightorgan
sudo /home/pi/svn/pi-lightorgan-read-only/lightorgan

# Start timidity
sudo /etc/init.d/timidity start

sleep 2

# Setup midi connections
aconnect 14:0 128:0
aconnect 14:0 129:0

# Set initial volume
vol 95
